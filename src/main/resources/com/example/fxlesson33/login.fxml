<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
      xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.fxlesson33.LoginController">
    <children>
        <VBox>
            <children>
                <Label alignment="BOTTOM_CENTER" contentDisplay="RIGHT" prefHeight="206.0" prefWidth="420.0"
                       text="Login Page"/>
            </children>
        </VBox>
        <VBox prefHeight="200.0" prefWidth="100.0">
            <children>
                <TextField fx:id="email" promptText="Enter email" text="madi">
                    <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </VBox.margin>
                </TextField>
                <PasswordField id="passwordTextField" fx:id="password" promptText="Enter password" text="123">
                    <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </VBox.margin>
                </PasswordField>
                <Label fx:id="corrected" alignment="BOTTOM_CENTER" contentDisplay="BOTTOM" prefHeight="18.0"
                       prefWidth="428.0"/>
            </children>
        </VBox>
        <VBox prefHeight="200.0" prefWidth="100.0">
            <children>
                <Button id="loginButton" fx:id="btn_login" mnemonicParsing="false" onAction="#loginButtonClicked"
                        prefHeight="30.0" prefWidth="479.0" text="Login">
                    <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </VBox.margin>
                </Button>
                <Button id="registrationButton" fx:id="btn_register" mnemonicParsing="false"
                        onAction="#registerButtonClicked" prefHeight="30.0" prefWidth="428.0" text="Registration">
                    <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </VBox.margin>
                </Button>
            </children>
        </VBox>
    </children>
</VBox>
